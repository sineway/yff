{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "bracketSpacing": false,
    "plugins": [
        "@prettier/plugin-php",
        "prettier-plugin-css-order",
        "prettier-plugin-jsdoc"
    ],
    "cssDeclarationSorterOrder": "alphabetical",
    "jsdocCommentLineStrategy": "multiline"
}
